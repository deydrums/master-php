{% extends 'base.html.twig' %}

{% block title %}Todas las tareas!{% endblock %}

{% block body %}
<style>

</style>

<div class="example-wrapper">
    <h2>Todas las tareas</h2>
    <div class="table-wrapper">
        <table class="fl-table">
        <thead>
            <tr>
                <th>Tarea</th>
                <th>Prioridad</th>
                <th>Horas presupuestadas</th>
                <th>Acciones</th>
            </tr>
        </thead>
            <tbody>
            {% for task in tasks %}
            <tr>
                <td class="table_tasks">{{task.title}}</td>
                <td class="table_tasks">
                    {% if task.priority == 'high' %}
                        {{'Alta'}}
                    {% endif %}
                    {% if task.priority == 'low' %}
                        {{'Baja'}}
                    {% endif %}
                    {% if task.priority == 'medium' %}
                        {{'Media'}}
                    {% endif %}
                </td>
                <td class="table_tasks">{{task.hours}}</td>
                <td class="buttons">
                    <a href="{{path('task_detail', {'id':task.id})}}" class="btn-show">Ver</a>
                    <a href="" class="btn-edit">Editar</a>
                    <a href="" class="btn-delete">Eliminar</a>
                </td>
            </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>

</div>
{% endblock %}
